{
  "manifest_version": 3,
  "name": "YouTube Resolution Controller",
  "version": "1.0",
  "description": "Set and maintain default YouTube video resolution",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
} 